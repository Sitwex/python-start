angle = 0
w = 0
d = 0
x = 0
def setup():
    global angle,x,w,d
    size(700,700)
    background(0)
    frameRate(1000)
    
def draw():
    global angle,x,w,d
    #background(0)
    translate(330,330)
    x = x + 0.5
    rotate(radians(angle))
    ellipse(x,0,w,d)
    w =(random(0,150))
    d =(random(0,150))
    angle = angle + 1 
    fill(random(0,255),random(0,255),random(0,255))
    
